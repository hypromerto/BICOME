package attribute;
/**
 * @author Ege Balcýoðlu
 * @version 23.4.2018
 */
public abstract class Attribute
{
   // properties
   protected static final double INITIAL = 50.0;
   private double value;
   
   // constructors
   public Attribute()
   {
      this.value = INITIAL;
   }
   
   public Double getValue()
   {
      return new Double( value );
   }
   
   public void calculate( Double multiplier )
   {
      value *= multiplier;
   }
}